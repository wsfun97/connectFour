<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelText"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyRadio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="NormalText"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
